# SQLite version 3.x
#   gem install sqlite3-ruby (not necessary on OS X Leopard)
development:
  adapter:     #mysql,postgresql... 
  database:    #your database name 
  host:        localhost
  username:    #your database username 
  password:    #if need
  pool: 5
  timeout: 5000
  encoding: utf8

