# Do not set this db to the same as development or production.
test:
  adapter: sqlite3
  database: db/test.sqlite3
  pool: 5
  timeout: 5000

production:
  adapter: 
  database: 
  host:
  username:
  pool: 5
  timeout: 5000
  encoding: utf8
