<p style="font-size:16px;font-weight:bold;margin-bottom:14px">
  <%= form.label 'title','行动标题：'%> <%= form.text_field :title, :size => 20, :placeholder => "" %>
</p>
<h5>物资捐赠必填信息：</h5>
<div style="line-height:30px">
  <%= form.label 'total_goods','物资数量：'%> <%= form.text_field :total_goods, :size => 4 ,:placeholder => ''%> <span>(填写数字)</span>
  <br/>
  <%= form.label 'address','邮寄地址：'%> <%= form.text_field :address, :size => 24, :placeholder => '',:style => "text-align:left" %>
  <br/>
  <%= form.label 'contact','联系方式：'%> <%= form.text_field :contact, :size => 24, :placeholder => '',:style => "text-align:left" %>
</div>
      
