<div style="padding:5px;width:320px">
  <% unless @record.photos.empty? %>
  <div class="photo_box">
    <%= image_tag(@record.photos.first.photo.url,:style => "float:left;padding:5px 10px 5px 0")%>
  </div>
  <% end %>
  <p class="explanation">
    <%= @record.detail %> <%= link_to '查看',@record%>
  </p>
  <div class="clear"></div>
  <span>提交人：<%= link_to @record.user.login,@record.user%> 　所属聚点：<%= link_to @record.venue.name,@venue%></span>
  
</div>
  