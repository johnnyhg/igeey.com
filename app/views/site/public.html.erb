
<%= form_tag search_path,:method => :get do%>
<div style="float:right;padding:2px 0">
  <%= text_field_tag 'keywords', @keywords,:size => 12,:style => "padding:2px;height:14px;text-align:right;font-size:13px;",:placeholder => '地点、用户' %>
  <%= submit_tag '搜索',:class => 'button'%>
</div>
<% end %>

